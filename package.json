{
  "scripts": {
    "css": "npm-run-all css-compile css-minify",
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css --quiet src/sass/style.scss:assets/css/style.css",
    "css-minify": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output css/ --batch --batch-suffix \".min\" \"css/*.css\" \"!css/*.min.css\" \"!css/*rtl*.css\"",
    "copy": "node src/build/copy-assets.js"
  },
  "dependencies": {
    "bootstrap": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.54.0"
  }
}
